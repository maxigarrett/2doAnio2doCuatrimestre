package POOTarea;

import java.util.ArrayList;
import java.util.Scanner;

public class case4
{
	ArrayList<alumno> mialumno=new ArrayList<alumno>();
	Scanner scan=new Scanner(System.in);
	
	public void mostrarAlumnoABuscar() 
	{
		System.out.println("indique el numero de alumno a buscar");
		int indice=scan.nextInt();
		
		if(indice==1) 
		{
			for(int i=0;i<mialumno.size();i++) 
			{
				mialumno.get(1).mostarDatos();
			}
		}
		else if(indice==2) 
		{
			for(int i=0;i<mialumno.size();i++) 
			{
				mialumno.get(2).mostarDatos();
			}
		}
	}
}
